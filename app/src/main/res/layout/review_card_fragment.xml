<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/review_card_layout"
  android:orientation="vertical"
  android:layout_marginTop="@dimen/app_bar_height"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ListView
    android:id="@+id/single_card"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_marginTop="130dp"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:padding="16dp"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <!--TODO this button needs to requery my database so I review a card that I haven't reviewed-->
    <Button
      android:id="@+id/button_review"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="REVIEW"
      android:layout_gravity="bottom"/>

    <!--TODO this button needs to place the card into higher level, need a true or false flag so this card is
    not review again until a specific date-->
    <Button
      android:id="@+id/button_level_up"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="LEVEL UP"
      android:layout_gravity="bottom"
      android:duplicateParentState="true"/>

  </LinearLayout>

</LinearLayout>